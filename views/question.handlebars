 <script type='text/javascript'>
           document.getElementById('play').style.visibility='hidden';

         </script>
<div class="row">
    <div id="story" class=".col-md-6">
        <p>{{question.quest}}</p>
    </div>
</div>
 
<div class="row">
 <div id="story" class=".col-md-4"> 
    <form action="/question/{{question.question_id}}" method="post">
        {{#each question.options}}
            <div class="radio">
                <label>
                <input type="radio" name="answer" value="{{this}}">{{this}}</label>
            </div>
        {{/each}}
        <input type="submit">
    </form>
 </div>

  <div id="feedback" class='btn btn-lg btn-primary'> 
    	   <span id="level"class='btn btn-lg btn-primary' >LEVEL 1</span>
    	   <span id="hint" class="btn btn-lg btn-primary"><a href="#userhint" class="open-popup-link">HINT</a></span>    	
    	   <span id="points" class="btn btn-lg btn-primary"> {{points}} POINTS</span>    	   
</div>
  
</div>
